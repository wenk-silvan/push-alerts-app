<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PushAlerts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/gothica1_light</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/textSecondary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/textPrimary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.PushAlerts.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Widget.PushAlerts.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Widget.PushAlerts.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Widget.PushAlerts.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>
</resources>