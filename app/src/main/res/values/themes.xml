<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PushAlerts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/gothica1_light</item>
        <item name="android:fontFamily">@font/gothica1_light</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/textSecondary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/textPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- OVERWRITING MATERIAL STYLES -->
        <item name="materialButtonStyle">@style/Widget.PushAlerts.Buttons</item>
        <item name="chipStyle">@style/Widget.PushAlerts.Chips</item>
        <item name="textAppearanceBody2">@style/Widget.PushAlerts.Body2</item>
        <item name="toolbarStyle">@style/Widget.PushAlerts.Toolbar</item>
    </style>

    <style name="Theme.PushAlerts.NoActionBar" parent="Theme.PushAlerts">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.PushAlerts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PushAlerts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.PushAlerts.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/gothica1_extrabold</item>
        <item name="android:fontFamily">@font/gothica1_extrabold</item>
    </style>

    <style name="Widget.PushAlerts.Chips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/gothica1_bold</item>
        <item name="android:fontFamily">@font/gothica1_bold</item>
    </style>

    <style name="Widget.PushAlerts.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@color/background</item>
        <item name="titleTextColor">@color/primary</item>
        <item name="android:titleTextColor">@color/primary</item>

    </style>

    <!-- CUSTOM FONTS -->

    <style name="Widget.PushAlerts.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.PushAlerts.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.PushAlerts.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>

    <style name="Widget.PushAlerts.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.PushAlerts.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.PushAlerts.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>
</resources>